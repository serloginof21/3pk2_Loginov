<Window x:Class="PZ_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ_10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10,10,-790,377">
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="SaveFile" Click="Save_File" Width="50"/>
                <Button Content="B" Click="Bold_Text" Width="40" FontWeight="Bold"/>
                <Button Content="I" Click="Italic_Text" Width="40" FontStyle="Italic"/>
                <Button Content="U" Click="Underline_Text" Width="40"/>
                <Button Content="Change txt size->" Width="100" Click="Change_txt"/>
                <TextBox x:Name="txtSize" Width="50"/>
                <Button Content="Undo ↩" Click="Undo_Text" Width="65"/>
            </StackPanel>
        </Grid>
        <RichTextBox Name="tb1" FontSize="14" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top" Width="780" Height="339"/>

    </Grid>
</Window>
