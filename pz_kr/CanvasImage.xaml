<Window x:Class="pz_kr.CanvasImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_kr"
        mc:Ignorable="d"
        Title="CanvasImage" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Text="Название заметки" x:Name="tb1" FontSize="23" TextAlignment="Center"/>
            <InkCanvas x:Name="inkCanvas" Height="340"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Save" Content="✔" Background="Green" Foreground="White" Width="35" Height="35" Click="Save_Click"/>
                <Button x:Name="Load" Content="⬆️" Background="DarkCyan" Foreground="White" Width="35" Height="35" Click="Load_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
