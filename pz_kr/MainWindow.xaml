<Window x:Class="pz_kr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_kr"
        mc:Ignorable="d"
        x:Name="MainWindows"
        Title="MainWindow" Height="450" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="49" VerticalAlignment="Top">
            <Button x:Name="AddBtn" Content="➕" Background="Green" Foreground="White" Width="45" FontSize="24" Click="AddBtn_Click"/>
            <Button x:Name="DeleteBtn" Content="–" Background="Red" Foreground="White"  Width="45" FontSize="36" Click="DeleteBtn_Click"/>
            <Button x:Name="UpdateBtn" Content="Update" Background="Yellow" Foreground="Black"  Width="92" FontSize="24" Click="UpdateClick"/>
        </StackPanel>
        <ListView x:Name="lV" Height="380" VerticalAlignment="Top" Margin="0,55,0,0" SelectionChanged="SelectNote"/>
    </Grid>
</Window>
